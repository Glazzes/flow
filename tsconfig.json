{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@data/*": ["./src/data/*"],
      "@ui/*": ["./src/ui/*"],
      "@configuration/*": ["./src/configuration/*"],
      "@assets/*": ["./assets/*"]
    },
    "typeRoots": ["./src/types"],
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": false
  }
}
